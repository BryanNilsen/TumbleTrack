@model TumbleTrack.Models.Meet

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Meet</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Date)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Date)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.City)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.City)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.State)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.State)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.MeetId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
@if (Model.Events.Count() > 0)
{
    <h2>Event Scores</h2>
    <div>
        @foreach (var item in Model.Events)
        {
            <h3>@item.Name</h3>
            @if (item.GymnastEvents.Count() > 0)
            {
                @foreach (var gymEvent in item.GymnastEvents)
                {
                    <p>
                        @gymEvent.Gymnast.FullName - @gymEvent.Score
                        <br />
                        @gymEvent.Notes
                    </p>
                }
            }
            <button>add score</button>
            <hr />
        }
    </div>

}